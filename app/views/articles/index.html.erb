
<h1>Listing articles</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Change', edit_article_path(article) %></td>
    </tr>

  <% end %>
</table>

<%= render 'form' %>


<div><%= link_to 'Add New', new_article_path %></div>
